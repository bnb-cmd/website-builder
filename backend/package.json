{
  "name": "pakistan-website-builder-backend",
  "version": "1.0.0",
  "description": "Backend API for Pakistan Website Builder",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "wrangler dev",
    "build": "tsc && tsc-alias",
    "build:workers": "tsc && wrangler deploy",
    "deploy": "wrangler deploy",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "db:migrate": "wrangler d1 migrations apply pakistan-website-builder",
    "db:migrate:local": "wrangler d1 migrations apply pakistan-website-builder --local"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.9.1",
    "@aws-sdk/client-s3": "^3.450.0",
    "@aws-sdk/s3-request-presigner": "^3.450.0",
    "@cloudflare/workers-types": "^4.20231218.0",
    "@fastify/cors": "^8.4.0",
    "@fastify/jwt": "^7.2.4",
    "@fastify/multipart": "^8.0.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@fastify/compress": "^6.4.0",
    "@fastify/static": "^6.12.0",
    "@fastify/cookie": "^9.3.1",
    "@google/generative-ai": "^0.2.1",
    "@types/dompurify": "^3.0.5",
    "@upstash/redis": "^1.25.0",
    "bcryptjs": "^2.4.3",
    "clean-css": "^5.3.3",
    "cloudinary": "^1.41.0",
    "cors": "^2.8.5",
    "dompurify": "^3.2.7",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "hono": "^3.12.0",
    "ioredis": "^5.3.2",
    "isomorphic-dompurify": "^2.28.0",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.20.1",
    "prisma": "^5.7.1",
    "@prisma/client": "^5.7.1",
    "sharp": "^0.32.6",
    "stripe": "^14.7.0",
    "terser": "^5.44.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/clean-css": "^4.2.11",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3",
    "tsc-alias": "^1.8.8",
    "vitest": "^3.2.4",
    "wrangler": "^3.22.1"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  }
}
