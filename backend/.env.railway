# Railway Production Environment Configuration Template
# Copy this to Railway environment variables

# Application
NODE_ENV=production
PORT=3005
CLIENT_URL=https://your-vercel-app.vercel.app

# Database Configuration - Use your Neon database URL
DATABASE_URL=postgresql://username:password@ep-example-123456.us-east-1.aws.neon.tech/neondb?sslmode=require
DATABASE_PROVIDER=postgresql
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration (Optional - Railway provides Redis)
REDIS_URL=redis://default:password@redis.railway.internal:6379
REDIS_PASSWORD=password

# JWT Configuration - Generate a secure secret for production
JWT_SECRET=your-production-super-secret-jwt-key-change-this-12345
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# AI Services Configuration (Add your real API keys)
OPENAI_API_KEY=sk-your-real-openai-key
OPENAI_MODEL=gpt-4
ANTHROPIC_API_KEY=sk-ant-your-real-anthropic-key
ANTHROPIC_MODEL=claude-3-sonnet
GOOGLE_AI_API_KEY=your-real-google-ai-key
GOOGLE_AI_MODEL=gemini-pro

# Storage Configuration (Add your real Cloudinary credentials)
STORAGE_PROVIDER=cloudinary
CLOUDINARY_CLOUD_NAME=your-real-cloud-name
CLOUDINARY_API_KEY=your-real-cloudinary-api-key
CLOUDINARY_API_SECRET=your-real-cloudinary-api-secret

# Payment Gateways (Add your real Stripe credentials)
STRIPE_SECRET_KEY=sk_live_your-real-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-real-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-real-stripe-webhook-secret

# Email Configuration (Add your real email service credentials)
EMAIL_PROVIDER=resend
RESEND_API_KEY=re_your-real-resend-api-key

# Production Configuration
ENABLE_SWAGGER=false
ENABLE_CORS=true
ENABLE_LOGGING=true
ENABLE_METRICS=true
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,image/svg+xml
