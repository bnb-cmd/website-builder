# Environment Variables Template for Railway Production
# Copy these variables to your Railway project settings

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3001
HOST=0.0.0.0
CLIENT_URL=https://your-frontend-domain.com
ENABLE_CORS=true
ENABLE_SWAGGER=false
ENABLE_LOGGING=true
ENABLE_METRICS=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Neon PostgreSQL (replace with your actual connection string)
DATABASE_URL=postgresql://username:password@host:port/database?pgbouncer=true&connect_timeout=15
DATABASE_PROVIDER=postgresql

# Database connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Upstash Redis (replace with your actual values)
UPSTASH_REDIS_REST_URL=https://your-database.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
# Storage provider: r2 (recommended)
STORAGE_PROVIDER=r2

# Cloudflare R2 (replace with your actual values)
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET=website-builder-assets
R2_PUBLIC_URL=https://your-bucket.your-domain.com

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# Generate a strong JWT secret for production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d
BCRYPT_ROUNDS=12

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================
# OpenAI (replace with your actual API key)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo

# Anthropic Claude (optional)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Google AI (optional)
GOOGLE_AI_API_KEY=your-google-ai-api-key
GOOGLE_AI_MODEL=gemini-pro

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Email provider: resend (recommended)
EMAIL_PROVIDER=resend

# Resend (replace with your actual API key)
RESEND_API_KEY=re_your-resend-api-key

# =============================================================================
# PAYMENT GATEWAYS
# =============================================================================
# Stripe (replace with your actual keys)
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# JazzCash (Pakistan)
JAZZCASH_MERCHANT_ID=your-jazzcash-merchant-id
JAZZCASH_PASSWORD=your-jazzcash-password
JAZZCASH_RETURN_URL=https://your-domain.com/payment/success
JAZZCASH_CANCEL_URL=https://your-domain.com/payment/cancel

# EasyPaisa (Pakistan)
EASYPAISA_MERCHANT_ID=your-easypaisa-merchant-id
EASYPAISA_PASSWORD=your-easypaisa-password
EASYPAISA_RETURN_URL=https://your-domain.com/payment/success
EASYPAISA_CANCEL_URL=https://your-domain.com/payment/cancel

# =============================================================================
# SOCIAL MEDIA INTEGRATIONS
# =============================================================================
# Instagram
INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-app-secret

# TikTok
TIKTOK_APP_KEY=your-tiktok-app-key
TIKTOK_APP_SECRET=your-tiktok-app-secret

# Facebook
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Pinterest
PINTEREST_APP_ID=your-pinterest-app-id
PINTEREST_APP_SECRET=your-pinterest-app-secret

# WhatsApp Business
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESS=false
RATE_LIMIT_SKIP_FAILED=false

# =============================================================================
# FILE UPLOAD LIMITS
# =============================================================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,image/svg+xml,application/pdf,text/plain
